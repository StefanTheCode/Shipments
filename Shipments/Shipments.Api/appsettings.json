{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ShipmentsDb": "Host=localhost;Port=5432;Database=shipments;Username=postgres;Password=postgres"
  },
  "Runtime": {
    "UseAzure": false
  },
  "BlobStorage": {
    "LocalRootPath": "blobdata",
    "ConnectionString": "",
    "ContainerName": "shipments-documents"
  },
  "ServiceBus": {
    "ConnectionString": "",
    "QueueName": "documents-to-process"
  },
  "DocumentProcessing": {
    "SimulatedDelayMs": 1500
  },
  "Correlation": {
    "HeaderName": "X-Correlation-Id"
  },
  "Outbox": {
    "Enabled": true,
    "DispatchIntervalSeconds": 2
  }
}
